    {% for music in music %}

        <div class="col-md-6">
            <div class="product-item text-center">
                <a href="{{ path('app_product_show', { 'slug' : music.slug }) }}"><img src="/uploads/{{ music.illustration }}" alt="{{ music.name }}" class="img-fluid" width="150px"></a>
                <h4>{{ music.name }}</h4>
                <span class="product-subtitle mt-2"> {{ music.subtitle }}</span>
                <span class="product-price mt-4"><h3> {{ music.price }} â‚¬ </h3></span>
            </div>
        </div>

    {% endfor %}

{% endblock %}
