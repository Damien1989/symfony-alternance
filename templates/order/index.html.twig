{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<h2>Je passe ma commande</h2>
<p>Choississez vos préférences avant de passer votre commande sur la boutique</p>
<hr>
<div class="row">
    <div class="col-md-6">
        {% set formHtml %}
            {{ form(form) }}
        {% endset %}
        {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
        <b>Choisir mon transporteur</b>
    </div>
    <div class="col-md-6">
        <b>Récapitulatif de ma commande</b></br>
        <b>Bouton pour payer</b>

    </div>
</div>
{% endblock %}
